
@model List<Product>

<div class="container pb-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-black">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-controller="Product" asp-action="CreateUpdateProduct" class=" btn  btn-primary"> <i class="bi bi-plus-circle"></i> Create New Product</a>
        </div>

    </div>



    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Product Title</th>
                <th scope="col">Product Description</th>
                <th scope="col">Product ISBN </th>
                <th scope="col">Product Author </th>
                <th scope="col">Product Price </th>
                <th scope="col">Product Category </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Title</td>
                    <td>@obj.Description</td>
                    <td>@obj.ISBN</td>
                    <td>@obj.Author</td>
                    <td>@obj.Price</td>
                    <td>@obj.CategoryId</td>
                    <td>
                        <div class="w-75 btn-group btn-group-sm" role="group">
                            <a asp-controller="Product" asp-action="CreateUpdateProduct" asp-route-id="@obj.ProductId" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Product" asp-action="DeleteProduct" asp-route-id="@obj.ProductId" class="btn btn-danger mx-1"><i class="bi bi-trash3"></i> Delete</a>

                        </div>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <button class="btn btn-outline-info" onclick="window.print()">Print this page</button>
</div>
