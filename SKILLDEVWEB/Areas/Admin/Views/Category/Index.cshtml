
@model List<Category>

<div class="container pb-3">
    <div class="row pt-3">
        <div class="col-6">
            <h2 class="text-black">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end pb-3">
            <a asp-controller="Category" asp-action="CreateCategory" class=" btn  btn-primary"> <i class="bi bi-plus-circle"></i> Create New Category</a>
        </div>

    </div>



    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col">Category Sl</th>
                <th scope="col">Category Name</th>
                <th scope="col">Category Id </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.DisplayOrder</td>
                    <td>@obj.CategoryName</td>
                    <td>@obj.CategoryId</td>
                    <td>
                        <div class="w-75 btn-group btn-group-sm" role="group">
                            <a asp-controller="Category" asp-action="EditCategory" asp-route-id="@obj.CategoryId" class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Category" asp-action="DeleteCategory" asp-route-id="@obj.CategoryId" class="btn btn-danger mx-1"><i class="bi bi-trash3"></i> Delete</a>

                        </div>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
    <button class="btn btn-outline-info" onclick="window.print()">Print this page</button>
</div>
